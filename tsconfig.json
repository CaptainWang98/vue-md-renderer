{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "preserve",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "useDefineForClassFields": true,
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    // "allowImportingTsExtensions": true,
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "noEmit": false,
    "isolatedModules": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "*.d.ts"
  ]
}
